{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",               // o "CommonJS", según tu proyecto
    "moduleResolution": "node",       // Configura el sistema de resolución de módulos
    "rootDir": ".",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "esModuleInterop": true,          // Opcional, para facilitar compatibilidad con módulos CommonJS
    "resolveJsonModule": true 
  },
  "include": ["src/**/*", "__tests__/**/*"]
}
